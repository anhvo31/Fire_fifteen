<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<h2>
    Zookeepers
</h2>

{{!-- Create a table --}}
<table id="zookeepers-table" border="1" cellpadding="5">

    <thead>
        <tr>
            <th>Zookeeper Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        {{!-- Iterate through data from database to fill table cells --}}
        {{#each data}}
        <tr data-value={{this.zookeeper_id}}>
            <td>{{this.zookeeper_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td align="middle">
                {{!-- Delete button --}}
                <button class="delete" onClick="deleteZookeeper({{this.zookeeper_id}})">Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_zookeeper.js"></script>
<p>&nbsp;</p>

{{!-- Add a Zookeeper form --}}
<form id="add-zookeeper-form-ajax">
    <fieldset class="fields">
        <legend><strong>Add Zookeeper</strong></legend>

        <label for="input-first-name">First Name: </label>
        <input type="text" name="input-first-name" id="input-first-name"></input>

        <p>
        <label for="input-last-name">Last Name: </label>
        <input type="text" name="input-last-name" id="input-last-name"></input>
        </p>

        <p>
        <input class="btn" type="submit" value="Submit">
        </p>
    </fieldset>
</form>
<script src="./js/add_zookeeper.js"></script>
<p>&nbsp;</p>
